# Use OpenJDK slim image
FROM openjdk:17-jdk-slim

# Set working directory
WORKDIR /app

# Create a non-root user for security
RUN useradd -m -r coderunner && \
    chown coderunner:coderunner /app

# Install essential packages
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set resource limits
RUN echo "* soft nproc 64" >> /etc/security/limits.conf && \
    echo "* hard nproc 128" >> /etc/security/limits.conf && \
    echo "* soft nofile 1024" >> /etc/security/limits.conf && \
    echo "* hard nofile 2048" >> /etc/security/limits.conf

# Switch to non-root user
USER coderunner

# Set Java options for security
ENV JAVA_OPTS="-Xmx512m -Xms64m -XX:+UseSerialGC -XX:MaxRAM=512m"

# Command to compile and run Java files
# Usage: docker run [image] sh -c "javac Solution.java && java Solution"
CMD ["sh", "-c", "javac Solution.java && java Solution"]