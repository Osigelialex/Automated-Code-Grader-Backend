# Use Python slim image for smaller size
FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Create a non-root user for security
RUN useradd -m -r coderunner && \
    chown coderunner:coderunner /app

# Install any essential packages
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    python3-dev && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Set resource limits
RUN echo "* soft nproc 64" >> /etc/security/limits.conf && \
    echo "* hard nproc 128" >> /etc/security/limits.conf && \
    echo "* soft nofile 1024" >> /etc/security/limits.conf && \
    echo "* hard nofile 2048" >> /etc/security/limits.conf

# Switch to non-root user
USER coderunner

# Set Python environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app

# Command to run Python files
# Usage: docker run [image] python /app/solution.py
CMD ["python", "/app/solution.py"]