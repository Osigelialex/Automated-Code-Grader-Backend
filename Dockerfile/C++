# Use gcc slim image
FROM gcc:latest

# Set working directory
WORKDIR /app

# Create a non-root user for security
RUN useradd -m -r coderunner && \
    chown coderunner:coderunner /app

# Install essential packages and cleanup
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set resource limits
RUN echo "* soft nproc 64" >> /etc/security/limits.conf && \
    echo "* hard nproc 128" >> /etc/security/limits.conf && \
    echo "* soft nofile 1024" >> /etc/security/limits.conf && \
    echo "* hard nofile 2048" >> /etc/security/limits.conf

# Switch to non-root user
USER coderunner

# Command to compile and run C++ files
# Usage: docker run [image] sh -c "g++ -o solution solution.cpp && ./solution"
CMD ["sh", "-c", "g++ -o solution solution.cpp && ./solution"]